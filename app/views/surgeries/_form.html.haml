  - if @surgery.errors.any?
    #error_explanation
      %h2= "#{pluralize(@surgery.errors.count, "error")} ha prohibido el guardado de este procedimiento:"
      %ul
        - @surgery.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label "Nombre: "
    = f.text_field :name, :autofocus => true, :class => 'form-control' 
  .form-group
    = f.label "DescripciÃ³n: "
    = f.text_field :description, :class => 'form-control' 
  .form-group
    = f.text_field :area_id, :type => "hidden"
  .form-group.btn-group
    = link_to 'Cancelar', root_path, :class => 'btn btn-danger'
    = f.submit 'Guardar', :class => "btn btn-success"