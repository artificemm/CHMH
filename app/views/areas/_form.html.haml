= simple_form_for @area, html: {class: 'form-horizontal'} do |f|
  = f.error_notification
  .form-inputs
    = f.input :name, autofocus: true, class: 'form-control' 
    = f.input :description, class: 'form-control' 
    = f.association :user, label: 'Jefe', collection: User.head_of_areas, label_method: :fullname, class: 'form-control'
  .form-actions
    = f.submit class: "btn btn-primary"
    = link_to 'Cancelar', root_path, class: 'btn btn-default'
