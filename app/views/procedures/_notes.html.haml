
- i = 0
#accordion2.panel-group
  - @procedures.each do |k,v|
    .panel.panel-default
      .panel-heading
        %h4
          %a.accordion-toggle{"data-parent" => "#accordion2", "data-toggle" => "collapse", :href => "#collapse_#{i}"}
            %span.badge
              = v
            = k.name
      %div{id: "collapse_#{i}", class: "accordion-body collapse"}
        .panel-body
          - v.times do
            -#change when cheked
            - examined_color = @procedure[i].examineds.count == 0 ?  "label-info" : "label-success"
            = link_to raw("<table class = 'nav-justified'><tr><th></td><th></td><th></td><th></td></tr><tr><td><span class='label #{examined_color}'>#{@procedure[i].folio}</span></td><td>#{@procedure[i].surgery.name}</td><td>#{@procedure[i].donedate.day.to_s + "/" + NameMonth(@procedure[i].donedate.month.to_s) + "/" + @procedure[i].donedate.year.to_s}</td></tr></table>"), @procedure[i], :class => "list-group-item"

            = button_to  "Borrar", @procedure[i], method: :delete, data: {confirm: "Desea borrar la nota?"}, class:  "btn-sm btn-danger pull-right  list-group-item"
            - i += 1