- @areas.each do |area|
  .panel.panel-default
    .panel-heading
      %h4
        = link_to area.name, area
    .panel-body
      %ul.list-group
        %li.list-group-item
          Numero notas uiltimo mes:
          = area.all_notes_last_month
        - user =  area.resident_with_more_notes
        - if user
          %li.list-group-item
            Usuario con mas notas
            = user.name + " " + user.lastname + " con " + user.procedures.count.to_s + " notas."

  .panel.panel-default
    .panel-heading
      %h4
        Residente del mes
    .panel-body
      = @best_resident.name + " " + @best_resident.lastname + " con " + @best_resident.procedures.count.to_s + " notas."